<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/store_list_iv"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/store01"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/store_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카페하카타도넛"
            android:textStyle="bold"
            android:textColor="#ff333333"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/store_list_iv"/>
        <TextView
            android:id="@+id/store_tv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19~29분"
            android:textColor="#ff666666"
            android:layout_margin="8dp"
            android:layout_below="@id/store_list_iv"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/store_tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff666666"
            android:text="디저트 커피, 하카타 도넛, 수제 뚱카룽"
            android:layout_margin="8dp"
            android:layout_below="@id/store_tv_name"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>